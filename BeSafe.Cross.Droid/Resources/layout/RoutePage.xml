<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/black"
>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top">
        
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                local:MvxBind="Text ActualSpeedTitle Mode=TwoWay; TextColor ActualSpeedTextColor "/>
        

               <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="40dp"
                android:textStyle="bold"
                android:textAlignment="center"
                local:MvxBind="Text ActualSpeed Mode=TwoWay; TextColor ActualSpeedTextColor"/>

    </LinearLayout>

 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"
                local:MvxBind="Text SpeedLimitTitle Mode=TwoWay; TextColor SpeedLimitTextColor"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="65dp"
                android:textStyle="bold"
                android:textAlignment="center"
                local:MvxBind="Text SpeedLimit Mode=TwoWay; TextColor SpeedLimitTextColor"
        />
       <!-- <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">        
        
       --><!-- <ProgressBar
        	android:layout_height="wrap_content"
        	android:layout_width="match_parent"
        	local:MvxBind="Visibility Visibility(IsLoading)"
        	android:indeterminateOnly="true"
        	android:keepScreenOn="true"/>-->

    </LinearLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FINALIZAR RUTA"
            local:MvxBind="Click EndWorkHoursCommand; Visibility IsVisibleEndWorkHours"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INICIAR RUTA"
            local:MvxBind="Click StartWorkHoursCommand; Visibility IsVisibleStartWorkHours"
            android:layout_gravity="bottom"/>

</FrameLayout>